<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration SYSTEM "classpath://org/hibernate/hibernate-configuration-3.0.dtd">


<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/cashFlow</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.connection.password">Acoco</property>
        <property name="hibernate.connection.pool_size">10</property>
        <property name="show_sql">True</property>
        <property name="dialect">org.hibernate.dialect.PostgreSQLDialect</property>
        <property name="hibernate.current_session_context_class">thread</property>

        <mapping resource="hibernete/Banco.hbm.xml"/>
        <mapping resource="hibernete/CuentaCobrar.hbm.xml"/>
        <mapping resource="hibernete/CuentaPagar.hbm.xml"/>


    </session-factory>
</hibernate-configuration>